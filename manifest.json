{
  "manifest_version": 3,
  "name": "Span Text Extractor",
  "version": "1.0",
  "description": "Extract text from span elements on a webpage",
  "permissions": ["activeTab", "scripting", "downloads"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}

